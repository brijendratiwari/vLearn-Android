    <style name="editTextStyle" parent="@style/textViewMedium">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/edittext_focus_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margintop_10</item>
        <item name="android:textColorHint">@color/text_color_blue</item>
    </style>

    <style name="button_login_page" parent="@style/button_rect">
        <item name="android:paddingTop">@dimen/margintop_10</item>
        <item name="android:paddingBottom">@dimen/margintop_10</item>
        <item name="android:paddingLeft">@dimen/margintop_20</item>
        <item name="android:paddingRight">@dimen/margintop_20</item>
    </style>

    <style name="buttonStylefor_form" parent="@style/editTextStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">left</item>
    </style>
    
