<resources xmlns:vlearn="http://schemas.android.com/apk/res/com.vlearn.android" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="textViewSimple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewLarge" parent="textViewSimple">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="textViewNormal" parent="textViewSimple">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="textViewMedium" parent="textViewSimple">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="textViewSmall" parent="textViewSimple">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="buttonSimple" parent="textViewSimple">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_rect" parent="buttonSimple">
        <item name="android:background">@drawable/button_selector_rect</item>
    </style>

    <style name="button_rounded_rect" parent="buttonSimple">
        <item name="android:background">@drawable/button_background_rect</item>
    </style>

    <style name="button_circle" parent="buttonSimple">
        <item name="android:background">@drawable/button_background_rect</item>
    </style>

    <style name="spinnerVlearn" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownSelector">#ff0000</item>
    </style>

    <style name="spinnerItemVlearn">
        <item name="android:textAppearance">@style/spinnerTextAppereance</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">@dimen/spinnerLeftRight</item>
    </style>

    <style name="spinnerTextAppereance" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

