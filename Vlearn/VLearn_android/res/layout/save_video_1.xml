<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vlearn="http://schemas.android.com/apk/res/com.vlearn.android"
    android:id="@+id/scrollview1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margintop_10"
    android:background="@drawable/bg_border"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.vlearn.android.ui.CustomButtonTTF
            android:id="@+id/seleceLanguage_1"
            style="@style/buttonStylefor_form"
            android:layout_width="match_parent"
            android:textSize="@dimen/textSizeNormal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margintop_10"
            android:layout_marginRight="@dimen/margintop_15"
            android:layout_marginTop="@dimen/margintop_10"
            android:layout_toLeftOf="@+id/videoThumbnail_1"
            android:background="@drawable/edit_text_bg"
            android:clickable="true"
            android:padding="@dimen/margintop_10"
            android:text="English"
            android:textColor="@color/edittext_focus_color"
            vlearn:custombuttonttf="fonts/KRONIKA_.ttf" />

        <com.vlearn.android.ui.CustomEditTextTTF
            android:id="@+id/videoTitle_1"
            android:layout_width="match_parent"
            android:textSize="@dimen/textSizeNormal"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/videoThumbnail_1"
            android:layout_alignLeft="@+id/seleceLanguage_1"
            android:layout_marginRight="@dimen/margintop_15"
            android:layout_marginTop="@dimen/margintop_05"
            android:layout_toLeftOf="@+id/videoThumbnail_1"
            android:background="@drawable/edit_text_bg"
            android:clickable="true"
            android:hint="@string/new_vlearn"
            android:textStyle="bold"
            android:inputType="text"
            android:textColorHint="@color/text_color_blue"
            android:padding="@dimen/margintop_10"
            android:textColor="@color/edittext_focus_color"
            vlearn:customttfEditText="fonts/KRONIKA_.ttf" />

        <com.vlearn.android.ui.RecyclingImageView
            android:id="@+id/videoThumbnail_1"
            android:layout_width="@dimen/margintop_120"
            android:layout_height="@dimen/margintop_102"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/seleceLanguage_1"
            android:layout_marginRight="@dimen/margintop_15"
            android:scaleType="fitXY"
            android:src="@drawable/ma_no_photo" />

        <LinearLayout
            android:id="@+id/linearlayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/seleceLanguage_1"
            android:layout_alignRight="@+id/videoThumbnail_1"
            android:layout_below="@+id/videoTitle_1"
            android:layout_marginTop="@dimen/margintop_15"
            android:orientation="horizontal"
            android:weightSum=".9" >

            <com.vlearn.android.ui.CustomButtonTTF
                android:id="@+id/selectCareers_1"
                style="@style/buttonStylefor_form"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/edit_text_bg"
                android:clickable="true"
                android:ellipsize="end"
                android:hint="@string/select_careers"
                android:padding="@dimen/margintop_10"
                android:singleLine="true"
                android:textSize="@dimen/textSizeNormal"
                android:textColor="@color/edittext_focus_color"
                vlearn:custombuttonttf="fonts/KRONIKA_.ttf" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <com.vlearn.android.ui.CustomButtonTTF
                android:id="@+id/tellAboutUs_1"
                style="@style/buttonStylefor_form"
                android:layout_width="0dp"
                android:textSize="@dimen/textSizeNormal"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/edit_text_bg"
                android:clickable="true"
                android:ellipsize="end"
                android:hint="@string/tell_about_us"
                android:padding="@dimen/margintop_10"
                android:singleLine="true"
                android:textColor="@color/edittext_focus_color"
                vlearn:custombuttonttf="fonts/KRONIKA_.ttf" />
        </LinearLayout>

        <com.vlearn.android.ui.CustomButtonTTF
            android:id="@+id/selectState_1"
            style="@style/buttonStylefor_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeNormal"
            android:layout_alignLeft="@+id/linearlayout5"
            android:layout_alignRight="@+id/linearlayout5"
            android:layout_below="@+id/linearlayout5"
            android:layout_marginTop="@dimen/margintop_15"
            android:background="@drawable/edit_text_bg"
            android:clickable="true"
            android:ellipsize="end"
            android:hint="@string/select_state"
            android:padding="@dimen/margintop_10"
            android:singleLine="true"
            android:textColor="@color/edittext_focus_color"
            vlearn:custombuttonttf="fonts/KRONIKA_.ttf" />

        <com.vlearn.android.ui.CustomEditTextTTF
            android:id="@+id/videoDescription_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margintop_90"
            android:layout_alignLeft="@+id/selectState_1"
            android:layout_alignRight="@+id/selectState_1"
            android:layout_below="@+id/selectState_1"
            android:layout_marginTop="@dimen/margintop_15"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/click_here_to_add_your_"
            android:padding="@dimen/margintop_10"
            android:textStyle="bold"
            android:paddingTop="@dimen/margintop_40"
            android:inputType="textMultiLine"
            android:textSize="@dimen/textSizeNormal"
            android:textColor="@color/textcolor_dark_blue"
            android:textColorHint="@color/textcolor_dark_blue"
            vlearn:customttfEditText="fonts/KRONIKA_.ttf" />

        <com.vlearn.android.ui.CustomTextViewTTF
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeNormal"
            android:layout_alignLeft="@+id/videoDescription_1"
            android:layout_alignTop="@+id/videoDescription_1"
            android:text="#VCareer "
            android:singleLine="true"
            android:ellipsize="middle"
            android:textStyle="bold"
            android:textColor="@color/textcolor_dark_blue"
            vlearn:customttf="fonts/KRONIKA_.ttf" />

        <com.vlearn.android.ui.CustomButtonTTF
            android:id="@+id/nextButton_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videoDescription_1"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/textSizeNormal"
            android:layout_marginTop="@dimen/margintop_15"
            android:background="@drawable/button_selector_rect"
            android:paddingBottom="@dimen/margintop_10"
            android:paddingLeft="@dimen/margintop_30"
            android:paddingRight="@dimen/margintop_30"
            android:paddingTop="@dimen/margintop_10"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            vlearn:custombuttonttf="fonts/Cookies.ttf" />
    </RelativeLayout>

</ScrollView>